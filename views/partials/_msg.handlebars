{{#if success_msg}}
    <div class="row">
        <div class="col s12 center ">
            <div class="card teal">
                <div class="card-content">
                    <span class="card-title white-text">
                        <h5>{{success_msg}}</h5>
                    </span>
                </div>
            </div>
        </div>
    </div>
{{/if}}

{{#if error_msg}}
<div class="row">
        <div class="col s12 center ">
            <div class="card red">
                <div class="card-content">
                    <span class="card-title white-text">
                        <h5>{{error_msg}}</h5>
                    </span>
                </div>
            </div>
        </div>
    </div>
{{/if}}