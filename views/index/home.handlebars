<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content">
        <span class="card-title">
          <h1>Welcome to Jotter</h1>
        </span>
        {{#if user}}
          <p>View your ideas!</p>
      </div>
      <div class="card-action">
          <a class="btn" href="/ideas/" role="button">Ideas</a>
        {{else}}   
          <p>Register to start taking notes!</p>
      </div>
      <div class="card-action">       
          <a class="btn" href="/users/login" role="button">Login </a>
          <a class="btn" href="/users/register" role="button">Register</a>
        {{/if}}
      </div>
    </div>
  </div>
</div>